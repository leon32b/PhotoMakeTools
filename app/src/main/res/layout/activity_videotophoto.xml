<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout
		android:id="@+id/layout_title"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_60"
		android:layout_alignParentTop="true"
		android:background="@color/main_banner_black">
		<ImageView
			android:id="@+id/iv_back"
			android:layout_width="@dimen/dp_60"
			android:layout_height="match_parent"
			android:layout_alignParentStart="true"
			android:scaleType="centerInside"
			android:background="@drawable/button_selector"
			android:src="@mipmap/ic_back"/>
		<TextView
			android:textSize="@dimen/sp_18"
			android:textColor="@color/white"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/text_extract_photo"
			android:layout_centerInParent="true" />
		<TextView
			android:textSize="@dimen/sp_18"
			android:textColor="@color/white"
			android:layout_alignParentEnd="true"
			android:background="@drawable/button_selector"
			android:id="@+id/tv_next"
			android:layout_width="@dimen/dp_72"
			android:layout_height="match_parent"
			android:gravity="center"
			android:text="@string/text_export" />
	</RelativeLayout>
    <RelativeLayout
		android:id="@+id/layout_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:layout_below="@id/layout_title"
		android:background="@color/black">
		<ImageView
			android:id="@+id/iv_image"
			android:layout_marginTop="@dimen/dp_10"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
		<FrameLayout
			android:id="@+id/layout_seek"
			android:clickable="true"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/dp_20"
			android:layout_marginRight="@dimen/dp_20"

			android:layout_below="@id/iv_image">
			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/rv_videotophoto"
				android:layout_width="match_parent"
				android:layout_marginTop="@dimen/dp_28"
				android:layout_height="@dimen/dp_40"/>
			<SeekBar
				android:id="@+id/seekbar"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp_44"
				android:layout_marginTop="@dimen/dp_26"
				android:progressDrawable="@color/transparent"/>
		</FrameLayout>
    </RelativeLayout>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/dp_40"
		android:layout_alignParentBottom="true">
		<ImageView
			android:id="@+id/iv_previous"
			android:layout_alignParentStart="true"
			android:layout_marginStart="@dimen/dp_30"
			android:padding="@dimen/dp_20"
			android:background="@drawable/button_selector"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@mipmap/ic_previous"/>
		<ImageView
			android:id="@+id/iv_rotate"
			android:layout_centerHorizontal="true"
			android:padding="@dimen/dp_20"
			android:background="@drawable/button_selector"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@mipmap/ic_rotate"/>
		<ImageView
			android:id="@+id/iv_next"
			android:layout_alignParentEnd="true"
			android:background="@drawable/button_selector"
			android:layout_marginEnd="@dimen/dp_30"
			android:padding="@dimen/dp_20"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@mipmap/ic_next"/>
	</RelativeLayout>
</RelativeLayout>